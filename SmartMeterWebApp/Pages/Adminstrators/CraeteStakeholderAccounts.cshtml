@page
@model SmartMeterWebApp.Pages.Adminstrators.CraeteStakeholderAccountsModel
@{
    ViewData["Title"] = "CraeteStakeholderAccounts";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>CraeteStakeholderAccounts</h1>


<h1>Register Subscriber</h1>
<form method="post" class="mt-3">
    <div class="col-md-10 col-md-offset-2">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="@Model.stackholderInfo.Sackholder_Name" class="control-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="@Model.stackholderInfo.Sackholder_Name" class="form-control" />
                <span asp-validation-for="@Model.stackholderInfo.Sackholder_Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="@Model.stackholderInfo.Phone" class="control-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="@Model.stackholderInfo.Phone" class="form-control" />
                <span asp-validation-for="@Model.stackholderInfo.Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="@Model.stackholderInfo.Email" class="control-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="@Model.stackholderInfo.Email" class="form-control" />
                <span asp-validation-for="@Model.stackholderInfo.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="@Model.stackholderInfo.Address" class="control-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="@Model.stackholderInfo.Address" class="form-control" />
                <span asp-validation-for="@Model.stackholderInfo.Address" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="@Model.stackholderInfo.State" class="control-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="@Model.stackholderInfo.State" class="form-control" />
                <span asp-validation-for="@Model.stackholderInfo.State" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="@Model.stackholderInfo.Country" class="control-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="@Model.stackholderInfo.Country" class="form-control" />
                <span asp-validation-for="@Model.stackholderInfo.Country" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-2 col-md-offset-2">
            <div class="form-group">
                <input type="submit" value="Comfirm" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


