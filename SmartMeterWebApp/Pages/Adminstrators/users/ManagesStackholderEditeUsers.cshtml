@page
@model SmartMeterWebApp.Pages.Adminstrators.users.ManagesStackholderEditeUsersModel
@{
}

<h1>Edit User</h1>

<h1>Register Subscriber</h1>
<form method="post" class="mt-3">
   
    <div class="col-md-10 col-md-offset-2">
        <input hidden asp-for="@Model.vm.Id" class="form-control" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="@Model.vm.Email" class="control-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="@Model.vm.Email" class="form-control" />
                <span asp-validation-for="@Model.vm.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="@Model.vm.UserName" class="control-label"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="@Model.vm.UserName" class="form-control" />
                <span asp-validation-for="@Model.vm.UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2 col-md-offset-2">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-page="/adminstrators/users/managestackerholderslistusers">back</a>
            </div>
        </div>
     </div>



        <div class="card">
            <div class="card-header">
                <h3>User Roles</h3>
            </div>
            <div class="card-body">
                @if (Model.vm.Roles.Any())
                {
                    foreach (var roles in Model.vm.Roles)
                    {
                        <h5 class="card-title">@roles</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            </div>
        </div>
        <div class="card-footer">
            <a asp-page="/Adminstrators/roles/ManageStackerHoldersUserRoles" asp-route-id="@Model.vm.Id">Manage Roles</a>
        </div>



        <div class="card">
            <div class="card-header">
                <h3>User Claim</h3>
            </div>
            <div class="card-body">
                @if (Model.vm.Claims.Any())
                {
                    foreach (var claims in Model.vm.Claims)
                    {
                        <h5 class="card-title">@claims</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            </div>
        </div>
        <div class="card-footer">
            <a asp-page="/Adminstrators/roles/ManageStackerHoldersUserClaims" asp-route-id="@Model.vm.Id">Manage Claims</a>
        </div>

</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


